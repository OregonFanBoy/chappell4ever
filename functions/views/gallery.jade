                            img#gal6.photobox_preview.img-fluid.img-center
                            span.photobox_label
                                a#pic6(onclick='LikePicture(6)',title='Like Photo')
        .row
            .col-sm-12
                hr
        
        
        
    #picturePopupModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
        .modal-dialog.modal-dialog-centered.modal-lg(role='document')
            .modal-content.bg-transparent(style='box-shadow: none')
                .modal-body
                    img#modalimg.img-fluid.img-center
                                      


  

        
