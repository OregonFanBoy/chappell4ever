extends layout

block content
    link(rel='stylesheet',href='home.css')
    link(rel='stylesheet',href='gallery.css')
    .container
        .row(style='box-shadow: none')
            .col-sm-12
                .jumbotron.jumbotron-fluid.jumbotron-home.bg-transparent
                    .container.header-color.txt-center
                        h1.display-3 Gallery Header
        .row
            .col-sm-12
                .gal
                    .photobox.photobox_style
                        
                        .photobox_previewbox
                            a.overlay(data-toggle='modal', data-target="#picturePopupModal", data-whatever='1', onmouseover='getLikes(1)')
                            img#gal1.photobox_preview.img-fluid.img-center.gal-item       
                            span.photobox_label
                                a#pic1(onclick='likePicture(1)',title='Like Photo')

                    .photobox.photobox_style                 
                        .photobox_previewbox
                            a.overlay(data-toggle='modal', data-target="#picturePopupModal", data-whatever='2',onmouseover='getLikes(2)')
